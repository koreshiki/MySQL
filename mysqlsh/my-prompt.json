{
  "desc" : "256/24bit color terminal theme with MySQL prefix, default schema, host:port, ssl, + indicator for X protocol, active mode.",
  "classes" : {
    "SQL" : {
      "fg" : "15",
      "bg" : "166"
    },
    "JS" : {
      "fg" : "0",
      "bg" : "221"
    },
    "Py" : {
      "fg" : "15",
      "bg" : "25"
    },
    "schema" : {
      "text": "%schema%"
    },
    "noschema" : {
      "text": ""
    },
    "disconnected": {
      "text": ""
    },
    "host" : {
      "text": "%transport%"
    },
    "hostx" : {
      "text": "%transport%+"
    },
    "hostc" : {
      "text": "%transport%"
    },
    "SSLhost" : {
      "text": "%transport% ssl"
    },
    "SSLhostx" : {
      "text": "%transport%+ ssl"
    },
    "SSLhostc" : {
      "text": "%transport% ssl"
    },

    "production" : {
      "text": " WARNING! PRODUCTION ",
      "bg": "red",
      "fg": "white"
    },

    "test" : {
      "text": " TEST ",
      "bg": "green",
      "fg": "white"
    },

    "version" : {
      "text": " %sysvar:version% "
    },
    "time" : {
      "text": " %date% %time%  "
    },

    "user": {
      "text": " %uri% "
    }
  },
  "variables" : {
    "is_production": {
        "match" : {
            "pattern": "*;%host%;*",
            "value": ";%env:PRODUCTION_SERVERS%;"
        },
        "if_true" : "production",
        "if_false" : "test"
    },
    "transport" : {
        "match" : {
          "pattern": "%socket%",
          "value": ""
        },
        "if_true": "%user%@%host%:%port%",
        "if_false": "localhost"
    },
    "cmd-py" : {
        "match" : {
          "pattern": "Py",
          "value": "%Mode%"
        },
        "if_true": "%Py%",
        "if_false": ""
    },
    "cmd-js" : {
        "match" : {
          "pattern": "JS",
          "value": "%Mode%"
        },
        "if_true": "JS",
        "if_false": ""
    },
    "cmd-sql" : {
        "match" : {
          "pattern": "SQL",
          "value": "%Mode%"
        },
        "if_true": "SQL",
        "if_false": "localhost"
    }
  },
  "symbols" : {
    "separator" : "",
    "separator2" : "",
    "ellipsis" : "..."
  },
  "prompt" : {
    "text" : " > ",
    "cont_text" : "%linectx%> ",
    "bg": "0"
  },
  "segments": [
	{
	  "classes": ["disconnected%host%", "%is_production%"]
	},
    {
      "text": " My",
      "bg": 254,
      "fg": 23
    },
    {
      "text": "SQL",
      "bg": 254,
      "fg": 166
    },
    {
      "classes": ["version"],
      "bg": 254,
      "fg": 0
    },
    {
      "classes": ["disconnected%host%", "%ssl%host%session%"],
      "shrink": "truncate_on_dot",
      "bg": 237,
      "fg": 15,
      "weight": 10,
      "padding" : 1
    },
    {
      "text": "\u2222"
    },
    {
      "classes": ["noschema%schema%", "schema"],
      "bg": 242,
      "fg": 15,
      "shrink": "ellipsize",
      "weight": -1,
      "padding" : 1
    },
    {
      "break": true
    },
    {
      "classes": ["%Mode%"],
      "text": "%Mode%",
      "padding": 1
    },
    {
      "classes": ["time"],
      "bg": 242,
      "fg": 15
    }
  ]
}


